{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "close mGBA emulator",
            "type": "shell",
            "command": "taskkill /im mGBA.exe /F || true",
            "problemMatcher": [],
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
